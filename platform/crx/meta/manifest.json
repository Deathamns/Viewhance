{
	"manifest_version": 2,
	"update_url": "https://clients2.google.com/service/update2/crx",

	"default_locale": "{def_lang}",
	"version": "{version}",
	"name": "{name}",
	"description": "__MSG_appDescriptionShort__",
	"homepage_url": "{homepage}",
	"author": "{author}",

	"icons": {
		"128": "icon.png"
	},

	"permissions": [
		"<all_urls>",
		"storage",
		"webRequest",
		"webRequestBlocking"
	],

	"optional_permissions": [
		"webNavigation"
	],

	"background": {
		"page": "background.html",
		"persistent": true
	},

	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},

	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"js/app.js",
				"js/viewer.js"
			],
			"run_at": "document_start",
			"all_frames": true
		},
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"js/opener.js"
			],
			"run_at": "document_idle",
			"all_frames": true
		}
	]
}
